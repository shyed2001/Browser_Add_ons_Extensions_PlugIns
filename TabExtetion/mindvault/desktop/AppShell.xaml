<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="MindVault.Desktop.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:pages="clr-namespace:MindVault.Desktop.Pages"
       Title="MindVault"
       FlyoutBehavior="Flyout"
       FlyoutWidth="220">

    <!-- Sidebar navigation items -->
    <FlyoutItem Title="Libraries" Route="LibrariesPage">
        <ShellContent ContentTemplate="{DataTemplate pages:LibrariesPage}"
                      Route="LibrariesPage" />
    </FlyoutItem>

    <FlyoutItem Title="Settings" Route="SettingsPageRoot">
        <ShellContent ContentTemplate="{DataTemplate pages:SettingsPage}"
                      Route="SettingsPageRoot" />
    </FlyoutItem>

    <!-- Deep-link routes (SessionsPage, TabsPage) are registered in AppShell.xaml.cs -->

</Shell>
