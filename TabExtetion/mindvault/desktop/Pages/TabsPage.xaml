<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MindVault.Desktop.ViewModels"
             xmlns:m="clr-namespace:MindVault.Desktop.Models"
             x:Class="MindVault.Desktop.Pages.TabsPage"
             x:DataType="vm:TabsViewModel"
             Title="Saved Tabs">

    <Grid RowDefinitions="Auto,Auto,*" Padding="16">

        <!-- Search bar -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,8">
            <Entry Placeholder="Search tabsâ€¦"
                   Text="{Binding SearchQuery}"
                   ReturnCommand="{Binding SearchCommand}" />
            <Button Grid.Column="1" Text="Search"
                    Command="{Binding SearchCommand}"
                    Margin="8,0,0,0" />
        </Grid>

        <Label Grid.Row="1"
               Text="{Binding StatusMessage}"
               FontSize="12" TextColor="Gray"
               Margin="0,0,0,8" />

        <ActivityIndicator Grid.Row="2"
                           IsRunning="{Binding IsLoading}"
                           IsVisible="{Binding IsLoading}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />

        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding FilteredTabs}"
                        SelectedItem="{Binding SelectedTab}"
                        SelectionMode="Single"
                        IsVisible="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}"
                        EmptyView="No tabs found.">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="m:Tab">
                    <Frame Margin="0,4" Padding="10" CornerRadius="6" HasShadow="False">
                        <Grid ColumnDefinitions="Auto,*">
                            <!-- Colour indicator (RGYB) -->
                            <BoxView Grid.Column="0"
                                     WidthRequest="6"
                                     CornerRadius="3"
                                     Margin="0,0,10,0"
                                     VerticalOptions="Fill">
                                <BoxView.Color>
                                    <Binding Path="Colour"
                                             Converter="{StaticResource ColourToColorConverter}"
                                             FallbackValue="LightGray" />
                                </BoxView.Color>
                            </BoxView>

                            <StackLayout Grid.Column="1" Spacing="2">
                                <Label Text="{Binding Title}"
                                       FontSize="14" FontAttributes="Bold"
                                       LineBreakMode="TailTruncation" />
                                <Label Text="{Binding Url}"
                                       FontSize="11" TextColor="Gray"
                                       LineBreakMode="TailTruncation" />
                                <Label Text="{Binding Notes}"
                                       FontSize="11" TextColor="DarkGray"
                                       IsVisible="{Binding Notes, Converter={StaticResource StringToBoolConverter}}"
                                       LineBreakMode="TailTruncation" />
                            </StackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
