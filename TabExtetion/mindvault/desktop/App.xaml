<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MindVault.Desktop"
             xmlns:conv="clr-namespace:MindVault.Desktop.Converters"
             x:Class="MindVault.Desktop.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Global value converters -->
            <conv:InvertedBoolConverter    x:Key="InvertedBoolConverter" />
            <conv:StringToBoolConverter    x:Key="StringToBoolConverter" />
            <conv:IsNotNullConverter       x:Key="IsNotNullConverter" />
            <conv:ColourToColorConverter   x:Key="ColourToColorConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
